# Core
MOCK_OPENAI=true
MOCK_SPEC_GENERATOR=true

# LLM Provider: "anthropic" or "openai" (auto-detects from keys if not set)
LLM_PROVIDER=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
# SPEC_LLM_MODEL=claude-sonnet-4-20250514   # override model for spec generation
# INTENT_LLM_MODEL=claude-sonnet-4-20250514 # override model for intent parsing

# Observability
PROMETHEUS_ENABLED=true
LOG_AS_JSON=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# Optional Sentry (add DSN in production)
SENTRY_DSN=

# Access control & rate limiting
MOCK_AUTH=true
API_KEYS=                 # comma-separated keys for production, e.g., API_KEYS=key1,key2
API_KEYS_FILE=            # optional path to a file with one key per line
RATE_LIMIT_PER_MINUTE=60
REDIS_URL=                # optional: redis://user:pass@host:6379/0 for distributed limiter

# Persistence
DATABASE_URL=sqlite:///./viz_agent.db   # for dev; production: postgres://user:pass@host:5432/dbname
